generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Member {
  id        Int       @id @default(autoincrement())
  name      String
  phone     String    @unique
  balance   Float     @default(0)
  receipts  Receipt[]
  createdAt DateTime  @default(now())
}

model Receipt {
  id         Int      @id @default(autoincrement())
  memberId   Int
  member     Member   @relation(fields: [memberId], references: [id])
  imageUrl   String
  amount     Float?
  depositor  String?
  status     String   @default("pending")
  createdAt  DateTime @default(now())
}